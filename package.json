{
	"name": "@essex/alpha-build-utils",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"essex": "node ./packages/scripts/lib/index.js",
		"test": "yarn essex test",
		"lint": "yarn essex lint --docs --fix",
		"prettify": "yarn essex prettify",
		"pipeline": "lage clean build bundle test",
		"git_is_clean": "yarn essex git-is-clean",
		"ci": "run-s pipeline lint test git_is_clean"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@essex/eslint-config": "^10.0.0",
		"@essex/eslint-plugin": "^10.0.0",
		"@essex/jest-config": "^10.0.0",
		"@essex/prettier-config": "^10.0.0",
		"@types/jest": "^26.0.13",
		"husky": "^4.3.0",
		"jest-junit-reporter": "^1.1.0",
		"lage": "0.19.9",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"ts-jest": "~26.3.0",
		"typescript": "^4.0.2"
	},
	"prettier": "@essex/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "pnpm essex -- pre-commit",
			"commit-msg": "pnpm essex -- commit-msg"
		}
	},
	"workspaces": [
		"packages/scripts",
		"packages/config/*",
		"packages/steps/*",
		"packages/util/*"
	]
}
